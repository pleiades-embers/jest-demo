{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "removeComments": false,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "paths": {}
  },
  "include": ["packages/global.d.ts", "packages/*/src"],
  "exclude": [
    "__tests__",
    "node_modules",
    "dist",
    "tests",
    "jest",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
