{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2015",
    "traceResolution": false,
    "types": ["jest", "node"],
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist"
  },
  "include": ["./src"],
  "exclude": ["./src/__tests__"]
}
